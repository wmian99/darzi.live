<!DOCTYPE html>
<head>
 
</head>

<body>
	<h2>Listing All Customers!</h2>

	<table class="table table-striped table table-bordered table table-hover">
	  <thead class="table-dark">
	  	<tr>
	  		<td> First Name </td>
	  		<td> Last Name </td>
	  		<td> Email </td>
	  	</tr>
	  </thead>
	<% @customers.each do |custm|%> 
	  <tr>
	    <td> <%= custm.fname %> </td>
	    <td> <%= custm.lname %></td>
	    <td> <%= custm.email %></td>
	    <td>  <%= link_to 'EDIT' , edit_customer_path(custm), class:"btn btn-success btn-sm" %> </td>
	    <td> <%= link_to 'DELETE' , customer_path(custm), method: :delete, data: { confirm: "Are you sure?"} , class:"btn btn-danger btn-sm" %> </td>
	  </tr>
	<% end %>
	</table>

	<button type="button" class="btn btn-warning btn-lg"> <%= link_to 'Add New Customer', new_customer_path %>  </button>
  </body>
 </html>